<!doctype html>

<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed layout-compact" dir="ltr" data-theme="theme-default" data-assets-path="/assets/" data-template="vertical-menu-template" data-style="light">
  <head>
    <%- include('../layout/head') %>
  </head>
  <% 
	// Helper function to handle NaN values
											
											
	const safeParseFloat = (value) => {
		if (value === null || isNaN(value)) {
			return 0;
		}
		return parseFloat(value);
	};

	function formatNumber(value) {
		const number = safeParseFloat(value);
	
		if (number < 0) {
			return `(${Math.abs(number).toLocaleString(undefined, {
				minimumFractionDigits: 2,
				maximumFractionDigits: 2,
			})})`;
		}
	
		return number.toLocaleString(undefined, {
			minimumFractionDigits: 2,
			maximumFractionDigits: 2,
		});
	}
%>
  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

       <%- include('../layout/aside') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

         <%- include('../layout/side') %>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
                <!-- DataTable with Buttons -->
                <div class="card">
                  <div class="card mb-4">
                    <div class="card-header">
                      <h5 class="mb-0">Search Payments</h5>
                    </div>
                    <div class="card-body">
                <form method="GET" action="">
                  <div class="row">
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="bill_ref" class="form-label">Bill Ref</label>
                        <input type="text" id="bill_ref" name="bill_ref" class="form-control"  />
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="business_name" class="form-label">Business Name</label>
                        <input type="text" id="business_name" name="business_name" class="form-control"
                         />
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="paymentMethod" class="form-label">Payment Method</label>
                        <input type="text" id="paymentMethod" name="payment_method" class="form-control"
                         />
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="paymentDateFrom" class="form-label">Payment Date From</label>
                        <input type="date" id="paymentDateFrom" name="payment_date_from" class="form-control"
                          />
                      </div>
                    </div>
                    <div class="col-md-3">
                      <div class="mb-3">
                        <label for="paymentDateTo" class="form-label">Payment Date To</label>
                        <input type="date" id="paymentDateTo" name="payment_date_to" class="form-control"
                         />
                      </div>
                    </div>
                  </div>
                
                  <div class="text-end">
                    <button type="submit" class="btn btn-primary">Search</button>
                  </div>
                </form>

                    </div>
                  </div>
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <h6>Total Paid: <span class="text-success">
                            <%= new Intl.NumberFormat('en-NG', { style: 'currency' , currency: 'NGN' }).format(totalPaid) %>
                          </span></h6>
                      </div>
                      <div class="col-md-6">
                      <h6 class="text-end">
                        Total Outstanding:
                        <span class="text-danger">
                          <%= new Intl.NumberFormat('en-NG', { style: 'currency' , currency: 'NGN' }).format(totalOutstanding) %>
                        </span>
                      </h6>

                      </div>
                    </div>
                  </div>
                    <div class="card-header">
                        <div class="row">
                            <div class="col-6">Revenue assessment payment report</div>
                            <div class="col-6" style="text-align: right;">Page Count (<%= totalPages %>)</div>

                        </div>
                    </div>
                    
                  <div class="card-datatable table-responsive pt-0">
                    <table class="datatables-basic table">
                      <thead>
                        <tr>
                          <th>Bill Ref</th>
                          <th>Item(s)</th>
                          <th>Name of business</th>
                          <th>Type of property</th>
                          <th>Payment Date</th>
                          <th>Amount</th>
                          <th>Amount Paid</th>
                          <th>Outstanding</th>
                          <th>Arrears</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% result.forEach(item=> { %>
                          <tr>
                            <td>
                              <%= item.bill_ref_no %>
                            </td>
                            <td>
                              <%= item.revenue_code %>
                            </td>
                            <td>
                              <%= item.name_of_business %>
                            </td>
                            <td>
                              <%= item.type_of_property %>
                            </td>
                            <td>
                              <%= item?.payment_date?.toLocaleDateString() %>
                            </td>
                            <td>
                              <%= formatNumber(safeParseFloat(item.grand_total)) %>
                            </td>
                            <td>
                              <%= formatNumber(safeParseFloat(item.amount_paid)) %>
                            </td>
                            <td>
                              <%= formatNumber(safeParseFloat(item.grand_total) - safeParseFloat(item.amount_paid)) %>
                            </td>
                            <td>
                              <%= formatNumber(safeParseFloat(item.arrears)) %>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                  
                  <!-- Pagination -->
                
                <%- include('pagination') %>

                </div>
              
               
  
  
                
              </div>
              <!-- / Content -->

        <%- include('../layout/footer') %>
         <!-- Page JS -->
    <script src="/assets/js/tables-datatables-basic.js"></script>
   <script>
    $(document).ready(function () {
 $('.datatables-basic').DataTable({
        paging: false,      
        ordering: false,  
        searching: false,   
        info: false,      
        lengthChange: false, 
        destroy: true       
      });

}); 

   </script>
  </body>
</html>
