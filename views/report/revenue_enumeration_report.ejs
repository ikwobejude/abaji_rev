<!doctype html>

<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed layout-compact" dir="ltr" data-theme="theme-default" data-assets-path="/assets/" data-template="vertical-menu-template" data-style="light">
  <head>
    <%- include('../layout/head') %>
  </head>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->

       <%- include('../layout/aside') %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->

         <%- include('../layout/side') %>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
                <!-- DataTable with Buttons -->
                <div class="card">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-6">
                        <h6>Total Paid: <span class="text-success">
                            <%= new Intl.NumberFormat('en-NG', { style: 'currency' , currency: 'NGN' }).format(totalPaid) %>
                          </span></h6>
                      </div>
                      <div class="col-md-6">
                        <h6>Total Outstanding: <span class="text-danger">
                            <%= new Intl.NumberFormat('en-NG', { style: 'currency' , currency: 'NGN' }).format(totalOutstanding) %>
                          </span></h6>
                      </div>
                    </div>
                  </div>
                    <div class="card-header">
                        <div class="row">
                            <div class="col-6">Revenue Enumerated Report for Buildings and Businesses</div>
                        </div>
                    </div>
                    
                  <div class="card-datatable  table-responsive pt-0">
                    <table class="datatables-basic table">
                      <thead>
                        <tr>
                          <th>Mandate Type</th>
                          <th>Bill Ref</th>
                          <th>Taxpayer Name</th>
                          <th>Name of business</th>
                          <th>Invoice Number</th>
                          <th>Payment Date</th>
                          <th>Amount</th>
                          <th>Amount Paid</th>
                          <th>Outstanding</th>
                          <!-- <th></th> -->
                        </tr>
                      </thead>
                      <tbody>
                        <% results.forEach(item => { %>
                            <tr>
                                <td><%= item?.source %></td>
                                <td><%= item?.ref_no %></td>
                                <td><%= item?.taxpayer_name %></td>
                                <td><%= item?.revenue_id %></td>
                                <td><%= item?.invoice_number %></td>
                                <td><%= item?.payment_date %></td>
                                <td><%= item?.amount %></td>
                                <td><%= item?.amount_paid %></td>
                                <td><%= item?.amount_paid %></td>

                          
                            </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              
               
  
  
                
              </div>
              <!-- / Content -->

        <%- include('../layout/footer') %>
         <!-- Page JS -->
    <script src="/assets/js/tables-datatables-basic.js"></script>
   
  </body>
</html>
